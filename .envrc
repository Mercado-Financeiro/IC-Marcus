# Ativa automaticamente a venv quando entrar no diretório
# Requer direnv instalado: sudo apt-get install direnv

if [ -d ".venv" ]; then
    source .venv/bin/activate
    echo "✅ Virtual environment ativado: .venv"
    echo "📊 Projeto IC - Predição de Criptomoedas"
    echo "🐍 Python: $(python --version)"
fi
